<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_login">

	<ImageView
		android:id="@+id/ivwLP_Logo"
		android:layout_width="84dp"
		android:layout_height="84dp"
		android:layout_marginTop="18dp"
		android:contentDescription="pokelearn_logo"
		android:src="@drawable/pokelearn_logo"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.19" />

	<TextView
		android:id="@+id/tvwLP_Title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="152dp"
		android:layout_marginTop="30dp"
		android:layout_marginEnd="152dp"
		android:fontFamily="@font/squada_one"
		android:text="Login"
		android:textAlignment="center"
		android:textColor="@color/white"
		android:textSize="24sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.54"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/ivwLP_Logo" />

	<TextView
		android:id="@+id/tvwLP_SUPClickable"
		android:layout_width="146dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="184dp"
		android:text="Donâ€™t have an account? Sign Up"
		android:textColor="@color/white"
		android:textSize="10sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tvwLP_Title" />

	<EditText
		android:id="@+id/etxtLP_User"
		android:layout_width="0dp"
		android:layout_height="35dp"
		android:layout_marginStart="50dp"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="50dp"
		android:background="@color/sign_in_box_color"
		android:backgroundTint="@color/sign_in_box_color"
		android:ems="10"
		android:fontFamily="sans-serif-thin"
		android:hint="Username or Email"
		android:inputType="text"
		android:padding="5dp"
		android:textColor="@color/_bg____for_ui__login_color"
		android:textColorHint="@color/sign_up_box_color"
		android:textSize="14sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tvwLP_SUPClickable" />

	<EditText
		android:id="@+id/etxtLP_Pass"
		android:layout_width="0dp"
		android:layout_height="35dp"
		android:layout_marginStart="50dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="50dp"
		android:background="@color/sign_in_box_color"
		android:backgroundTint="@color/sign_in_box_color"
		android:ems="10"
		android:fontFamily="sans-serif-thin"
		android:hint="Password"
		android:inputType="text"
		android:padding="5dp"
		android:textColor="@color/_bg____for_ui__login_color"
		android:textColorHint="@color/sign_up_box_color"
		android:textSize="14sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/etxtLP_User" />

	<Button
		android:id="@+id/btnLP_Login"
		android:layout_width="100dp"
		android:layout_height="50dp"
		android:layout_marginStart="136dp"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="136dp"
		android:text="Login"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/etxtLP_Pass" />

	<TextView
		android:id="@+id/tvwLP_FBLogin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="152dp"
		android:layout_marginTop="20dp"
		android:layout_marginEnd="152dp"
		android:text="Log in with"
		android:textColor="@color/white"
		android:textSize="8sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/btnLP_Login" />

</androidx.constraintlayout.widget.ConstraintLayout>
